#include <stdio.h>
int main(){
    int n,i,temp,pos;
    scanf("%d",&n);
    int N[n];
    temp=1000;
    pos=0;
    for(i=0;i<n;i++){
            scanf("%d",&N[i]);
            if(N[i]<temp){
                temp=N[i];
                pos=i;
            }
    }
    printf("Menor valor: %d\n",temp);
    printf("Posicao: %d\n",pos);
    return 0;
    }
